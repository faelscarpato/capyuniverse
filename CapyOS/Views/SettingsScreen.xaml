<UserControl x:Class="CapyOS.Views.SettingsScreen"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Border Background="{DynamicResource App.SurfaceBrush}"
            CornerRadius="12"
            Padding="16"
            Width="520" Height="360">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <DockPanel Grid.Row="0">
                <TextBlock Text="Configurações" FontSize="18" FontWeight="SemiBold" Foreground="{DynamicResource App.ForegroundBrush}"/>
                <Button Content="Fechar" HorizontalAlignment="Right" DockPanel.Dock="Right"
                        Command="{Binding ToggleSettingsScreenCommand}"/>
            </DockPanel>
            <StackPanel Grid.Row="1" Margin="0,12,0,0">
                <TextBlock Text="Nome de exibição" Foreground="{DynamicResource App.ForegroundBrush}"/>
                <TextBox Text="{Binding ProfileName, UpdateSourceTrigger=PropertyChanged}"/>
                <TextBlock Text="Avatar (caminho)" Margin="0,8,0,0" Foreground="{DynamicResource App.ForegroundBrush}"/>
                <TextBox Text="{Binding ProfileAvatarPath, UpdateSourceTrigger=PropertyChanged}"/>
                <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                    <TextBlock Text="Tema:" VerticalAlignment="Center" Foreground="{DynamicResource App.ForegroundBrush}"/>
                    <Button Content="Alternar" Margin="8,0,0,0" Command="{Binding ToggleThemeCommand}"/>
                </StackPanel>
                <Border Margin="0,12,0,0" Background="{DynamicResource App.BackgroundBrush}" CornerRadius="8" Padding="12">
                    <StackPanel>
                        <TextBlock Text="CapyMate / IA" FontSize="14" FontWeight="SemiBold" Foreground="{DynamicResource App.ForegroundBrush}"/>
                        <TextBlock Text="API Key" Margin="0,8,0,0" Foreground="{DynamicResource App.ForegroundBrush}"/>
                        <TextBox Text="{Binding CapyMateApiKey, UpdateSourceTrigger=PropertyChanged}"/>
                        <TextBlock Text="Endpoint URL" Margin="0,8,0,0" Foreground="{DynamicResource App.ForegroundBrush}"/>
                        <TextBox Text="{Binding CapyMateEndpointUrl, UpdateSourceTrigger=PropertyChanged}"/>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
                            <Button Content="Salvar IA CapyMate" Command="{Binding SaveCapyMateSettingsCommand}"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </StackPanel>
            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
                <Button Content="Salvar" Command="{Binding SaveProfileCommand}"/>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>
