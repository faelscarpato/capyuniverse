<UserControl x:Class="CapyOS.Views.HomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid Background="{DynamicResource App.BackgroundBrush}" Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBlock Text="CapyOS Home" FontSize="22" FontWeight="SemiBold" Foreground="{DynamicResource App.ForegroundBrush}"/>
        <TextBlock Grid.Row="1" Text="Bem-vindo ao seu desktop. Use os atalhos abaixo para começar." Margin="0,4,0,12" Foreground="{DynamicResource App.ForegroundBrush}"/>
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <UniformGrid Columns="2" Rows="2" Margin="0,0,12,0">
                <Border CornerRadius="10" Background="{DynamicResource App.SurfaceBrush}" Padding="12" Margin="8">
                    <StackPanel>
                        <TextBlock Text="CapyIDE" FontSize="16" FontWeight="SemiBold" Foreground="{DynamicResource App.ForegroundBrush}"/>
                        <TextBlock Text="Editor interno para desenvolvimento." Margin="0,4,0,8" Foreground="{DynamicResource App.ForegroundBrush}"/>
                        <Button Content="Abrir" Command="{Binding OpenAppByIdCommand}" CommandParameter="capy.ide"/>
                    </StackPanel>
                </Border>
                <Border CornerRadius="10" Background="{DynamicResource App.SurfaceBrush}" Padding="12" Margin="8">
                    <StackPanel>
                        <TextBlock Text="CapyDoc" FontSize="16" FontWeight="SemiBold" Foreground="{DynamicResource App.ForegroundBrush}"/>
                        <TextBlock Text="Documentos e anotações." Margin="0,4,0,8" Foreground="{DynamicResource App.ForegroundBrush}"/>
                        <Button Content="Abrir" Command="{Binding OpenAppByIdCommand}" CommandParameter="capy.doc"/>
                    </StackPanel>
                </Border>
                <Border CornerRadius="10" Background="{DynamicResource App.SurfaceBrush}" Padding="12" Margin="8">
                    <StackPanel>
                        <TextBlock Text="CapyStore" FontSize="16" FontWeight="SemiBold" Foreground="{DynamicResource App.ForegroundBrush}"/>
                        <TextBlock Text="Catálogo de apps externos e internos." Margin="0,4,0,8" Foreground="{DynamicResource App.ForegroundBrush}"/>
                        <Button Content="Abrir" Command="{Binding OpenAppByIdCommand}" CommandParameter="capy.store"/>
                    </StackPanel>
                </Border>
                <Border CornerRadius="10" Background="{DynamicResource App.SurfaceBrush}" Padding="12" Margin="8">
                    <StackPanel>
                        <TextBlock Text="Configurações" FontSize="16" FontWeight="SemiBold" Foreground="{DynamicResource App.ForegroundBrush}"/>
                        <TextBlock Text="Preferências e tema." Margin="0,4,0,8" Foreground="{DynamicResource App.ForegroundBrush}"/>
                        <Button Content="Abrir" Command="{Binding ToggleSettingsScreenCommand}"/>
                    </StackPanel>
                </Border>
            </UniformGrid>
            <Border Grid.Column="1" CornerRadius="10" Background="{DynamicResource App.SurfaceBrush}" Padding="12" Margin="8">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <TextBlock Text="CapyMate – Assistente do CapyOS" FontSize="16" FontWeight="SemiBold" Foreground="{DynamicResource App.ForegroundBrush}"/>
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <ItemsControl ItemsSource="{Binding CapyMate.Messages}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border CornerRadius="8" Padding="8" Margin="8">
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Setter Property="Background" Value="#11000000"/>
                                                <Setter Property="HorizontalAlignment" Value="Left"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Role}" Value="user">
                                                        <Setter Property="Background" Value="#113366FF"/>
                                                        <Setter Property="HorizontalAlignment" Value="Right"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>
                                        <StackPanel>
                                            <TextBlock Text="{Binding Text}" TextWrapping="Wrap" Foreground="{DynamicResource App.ForegroundBrush}"/>
                                            <TextBlock Text="{Binding Timestamp}" FontSize="10" Opacity="0.6"/>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                    <TextBlock Grid.Row="2" Text="pensando..." Foreground="{DynamicResource App.ForegroundBrush}" Opacity="0.7">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding CapyMate.IsBusy}" Value="True">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                    <DockPanel Grid.Row="3" Margin="0,8,0,0">
                        <TextBox x:Name="CapyMateInput" Text="{Binding CapyMate.CurrentInput, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" MinWidth="180"/>
                        <Button Content="Enviar" Margin="8,0,0,0" Command="{Binding CapyMate.SendMessageCommand}"/>
                    </DockPanel>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</UserControl>
