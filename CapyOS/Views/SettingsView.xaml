<UserControl x:Class="CapyOS.Views.SettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid Background="{DynamicResource App.SurfaceBrush}" Margin="12">
        <StackPanel>
            <TextBlock Text="Configurações" FontSize="18" FontWeight="SemiBold" Foreground="{DynamicResource App.ForegroundBrush}"/>
            <StackPanel Orientation="Horizontal" Margin="0,12,0,0">
                <TextBlock Text="Tema:" VerticalAlignment="Center" Foreground="{DynamicResource App.ForegroundBrush}"/>
                <Button Content="Alternar" Margin="8,0,0,0"
                        Command="{Binding DataContext.ToggleThemeCommand, RelativeSource={RelativeSource AncestorType=Window}}"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
