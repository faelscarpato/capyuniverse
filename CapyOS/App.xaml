<Application x:Class="CapyOS.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:views="clr-namespace:CapyOS.Views"
             xmlns:sel="clr-namespace:CapyOS.Selectors"
             ShutdownMode="OnMainWindowClose">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Themes/Light.xaml" />
                <ResourceDictionary Source="Resources/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <DataTemplate x:Key="CapyIDE">
                <views:CapyIDEView/>
            </DataTemplate>
            <DataTemplate x:Key="CapyDoc">
                <views:CapyDocView/>
            </DataTemplate>
            <DataTemplate x:Key="Settings">
                <views:SettingsView/>
            </DataTemplate>
            <DataTemplate x:Key="CapyStore">
                <views:CapyStoreView/>
            </DataTemplate>
            <DataTemplate x:Key="CapyLove">
                <views:CapyLoveView DataContext="{Binding DataContext.CapyLove, RelativeSource={RelativeSource AncestorType=Window}}"/>
            </DataTemplate>

            <sel:AppContentTemplateSelector x:Key="AppContentSelector"
                                             CapyIDE="{StaticResource CapyIDE}"
                                             CapyDoc="{StaticResource CapyDoc}"
                                             Settings="{StaticResource Settings}"
                                             CapyStore="{StaticResource CapyStore}"
                                             CapyLove="{StaticResource CapyLove}"/>
        </ResourceDictionary>
    </Application.Resources>
</Application>
